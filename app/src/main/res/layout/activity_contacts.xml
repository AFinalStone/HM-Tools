<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="手机联系人" />

    <Button
        android:id="@+id/btn_openContactsByNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取手机号列表" />

    <Button
        android:id="@+id/btn_openContactsByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取联系人列表" />

    <Button
        android:id="@+id/btn_openContactsByEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取邮政地址列表" />

    <Button
        android:id="@+id/btn_openContactsByElecEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取电子邮件列表" />

</LinearLayout>
