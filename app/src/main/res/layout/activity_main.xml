<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hm.iou.tools.demo.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.hm.iou.tools.demo.MainActivity">

        <Button
            android:id="@+id/btn_test1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toast文本" />

        <Button
            android:id="@+id/btn_test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toast图片" />

        <EditText
            android:id="@+id/et_test_upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/btn_showKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换键盘状态" />

        <Button
            android:id="@+id/btn_test3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试大写" />

        <ImageView
            android:id="@+id/iv_tools"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/et_test_fToY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/btn_test_fToY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试分转元" />

        <Button
            android:id="@+id/btn_test_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试防止重复点击事件" />

        <Button
            android:id="@+id/btn_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开手机通讯录" />

        <Button
            android:id="@+id/btn_getStatusBarHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取状态栏高度" />


        <Button
            android:id="@+id/btn_clip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取剪切板内容" />

        <Button
            android:id="@+id/btn_clip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置剪切板内容" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KT通过委托来获取传递参数"
            android:onClick="testKtDelegate"
            />

    </LinearLayout>
</ScrollView>